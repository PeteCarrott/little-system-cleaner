<Scanner>
<Information>
<Name>Windows XP Prefetch Files</Name>
<Description>Trace files about Windows startup (XP Only)</Description>
</Information>

<IsValid>
<FolderExist>%WinDir%\Prefetch</FolderExist>
</IsValid>

<Action>
<DeleteFileList Path="%WinDir%\Prefetch" SearchText="*" IncludeSubFolders="N"/>
<DeleteFolderList Path="%WinDir%\Prefetch" SearchText="*" IncludeSubFolders="N"/>
</Action>
</Scanner>