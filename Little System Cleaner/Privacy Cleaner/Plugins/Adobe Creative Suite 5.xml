<Scanner>
<Information>
<Name>Adobe Creative Suite 5</Name>
<Description>Adobe Creative Suite 5 Recent File List</Description>
</Information>

<IsValid>
<KeyExist>HKEY_CURRENT_USER\Software\Adobe\Dreamweaver CS5</KeyExist>
<KeyExist>HKEY_CURRENT_USER\Software\Adobe\Fireworks\11</KeyExist>
<KeyExist>HKEY_CURRENT_USER\Software\Adobe\Photoshop\11.0</KeyExist>
</IsValid>

<Action>

<!-- Dreamweaver -->
<FindRegKey RegKey="HKEY_CURRENT_USER\Software\Adobe\Dreamweaver CS5\Recent File List" IncludeSubKeys="N">
	<IfValueName SearchText="File[1-10]" />
</FindRegKey>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Adobe\Dreamweaver CS5\Settings" ValueName="LastDirectory"/>

<!-- Fireworks -->
<FindRegKey RegKey="HKEY_CURRENT_USER\Software\Adobe\Fireworks\11\ini\Recent File List" IncludeSubKeys="N">
	<IfValueName SearchText="File[1-10]" />
</FindRegKey>

<!-- Photoshop -->
<FindRegKey RegKey="HKEY_CURRENT_USER\Software\Adobe\Photoshop\12.0\Recent File List" IncludeSubKeys="N">
	<IfValueName SearchText="File[1-10]" />
</FindRegKey>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Adobe\Photoshop\12.0\Settings" ValueName="LastDirectory"/>
</Action>
</Scanner>