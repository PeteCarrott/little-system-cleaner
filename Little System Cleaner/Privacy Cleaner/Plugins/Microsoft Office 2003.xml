<Scanner>
<Information>
<Name>Microsoft Office 2003</Name>
<Description>Microsoft Office 2003 Recent File List</Description>
</Information>

<IsValid>
<KeyExist>HKEY_CURRENT_USER\Software\Microsoft\Office\11.0</KeyExist>
</IsValid>

<IsRunning>EXCEL</IsRunning>
<IsRunning>INFOPATH</IsRunning>
<IsRunning>MSACCESS</IsRunning>
<IsRunning>POWERPNT</IsRunning>
<IsRunning>WINWORD</IsRunning>

<Action>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Microsoft\Office\11.0\Access\File MRU" ValueName="^Item"/>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Microsoft\Office\11.0\Excel\File MRU" ValueName="^Item"/>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Microsoft\Office\11.0\InfoPath\File MRU" ValueName="^Item"/>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Microsoft\Office\11.0\PowerPoint\File MRU" ValueName="^Item"/>
<DeleteValue RegKey="HKEY_CURRENT_USER\Software\Microsoft\Office\11.0\Word\File MRU" ValueName="^Item"/>
</Action>
</Scanner>