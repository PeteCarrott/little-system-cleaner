<Window x:Class="Little_System_Cleaner.Privacy_Cleaner.Helpers.RunningMsg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="200" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Margin="5,5,5,5">You must close the following processes in order for the scanning process to continue. Otherwise, it will be skipped.</TextBlock>
            <ListBox x:Name="listBox" Height="69" Margin="5,5,5,5"></ListBox>
            <DockPanel LastChildFill="False" Margin="5,5,5,5" Height="25">
                <CheckBox x:Name="checkBoxDontShow" Content="Don't show this message again" DockPanel.Dock="Left" VerticalAlignment="Center" Checked="checkBoxDontShow_Checked" />
                <Button x:Name="buttonCancel" Content="Cancel" DockPanel.Dock="Right" IsCancel="True" />
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
