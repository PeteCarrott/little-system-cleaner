<Window x:Class="Little_System_Cleaner.Disk_Cleaner.Helpers.AddExcludeFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exclude Folder" Height="89.127" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Height="25">
            <Label Content="Folder:" Margin="0,0,5,0" VerticalAlignment="Center" />
            <TextBox x:Name="TextBox" Margin="0,0,5,0" Width="172" />
            <Button x:Name="ButtonBrowse" Content="..." Width="25" Click="buttonBrowse_Click" />
            <Button x:Name="HelpButton" Margin="5,0,0,0" Width="25" Height="25" ToolTip="Click to view information on what can be entered into text box." Click="HelpButton_Click">
                <Image x:Name="HelpIcon" Source="/Little_System_Cleaner;component/Resources/Help.png" Width="20" Height="20"  />
            </Button>
        </StackPanel>
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonOk" Content="OK" Margin="0,0,5,0" Width="27" IsDefault="True" Click="buttonOk_Click" />
            <Button x:Name="ButtonCancel" Content="Cancel" Width="49" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
