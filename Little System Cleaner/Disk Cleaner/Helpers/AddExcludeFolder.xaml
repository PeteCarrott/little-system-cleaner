<Window x:Class="Little_System_Cleaner.Disk_Cleaner.Helpers.AddExcludeFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exclude Folder" Height="180" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap">Please enter a folder. Wildcards are supported. (a question mark (?) represents a single character and an asterisk (*) represents 0 or more characters)</TextBlock>
        <TextBlock Margin="10,0,10,0"></TextBlock>
        <TextBlock Margin="10,0,10,0" TextWrapping="Wrap">Example: ?:\test matches a root folder named test</TextBlock>
        <StackPanel Margin="10,0,10,10" Orientation="Horizontal" Height="25">
            <Label Content="Folder:" Margin="0,0,5,0" VerticalAlignment="Center" />
            <TextBox x:Name="textBox" Margin="0,0,5,0" Width="193" />
            <Button x:Name="buttonBrowse" Content="..." Width="25" Click="buttonBrowse_Click" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" HorizontalAlignment="Right">
            <Button x:Name="buttonOk" Content="OK" Margin="0,0,5,0" Width="27" IsDefault="True" Click="buttonOk_Click" />
            <Button x:Name="buttonCancel" Content="Cancel" Width="49" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
