<Window x:Class="Little_System_Cleaner.Disk_Cleaner.Helpers.AddExcludeFileType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exclude File Type" Height="180" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap">Please enter a file type. Wildcards are supported. (a question mark (?) represents a single character and an asterisk (*) represents 0 or more characters)</TextBlock>
        <TextBlock Margin="10,0,10,0"></TextBlock>
        <TextBlock Margin="10,0,10,0" TextWrapping="Wrap">Example: *.old matches files that end with .old</TextBlock>
        <StackPanel Margin="10,0,10,10" Orientation="Horizontal" Height="25">
            <Label Content="File Type:" Margin="0,0,5,0" VerticalAlignment="Center" />
            <TextBox x:Name="TextBox" Margin="0,0,5,0" Width="210" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" HorizontalAlignment="Right">
            <Button x:Name="ButtonOk" Content="OK" Margin="0,0,5,0" Width="27" Click="buttonOk_Click" IsDefault="True" />
            <Button x:Name="ButtonCancel" Content="Cancel" Width="49" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
